<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springproject.www.repository.MemberDAO">

	<select id="selectAuths" resultType="com.springproject.www.security.AuthVO">
		select * from auth_member
	</select>
	
	<insert id="insert">
		insert into member (email, pwd, nick_name)
		values(#{email}, #{pwd}, #{nickName})
	</insert>
	
	<insert id="insertAuthInit">
		insert into auth_member (email, auth) values(#{email}, 'ROLE_USER')
	</insert>
	
	<select id="isEmail" resultType="com.springproject.www.security.MemberVO">
		select * from member where email=#{email}
	</select>
	
	<update id="updateLastLogin">
		update member set 
		last_login = now()
		where email = #{email}
	</update>

	<select id="getPwd" resultType="String">
		select pwd from member where email=#{email}
	</select>
	
	<update id="modify">
		update member set
		pwd = #{pwd},
		nick_name = #{nickName}
		where email=#{email}
	</update>

	<delete id="delete">
		delete from member 
		where email = #{email}
	</delete>

</mapper>